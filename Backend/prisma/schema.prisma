datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                  Int     @id @default(autoincrement())
  firstName           String
  lastName            String
  email               String  @unique
  password            String
  userType            String
  school              String?
  gpa                 String?
  major               String?
  gender              String?
  raceEthnicity       String?
  technicalSkills     Json
  previousInternships Int?
  company             String?
  companyCulture      String?
}

model Internship {
  id             Int      @id @default(autoincrement())
  title          String
  jobTitle       String
  jobType        String
  company        String
  location       String
  description    String
  qualifications String
  url            String
  postedAt       DateTime
}

model Recruiter {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  company   String
  email     String
}
